<main>
  <%= javascript_pack_tag "reagents", "data-turbolinks-track": true %>
  <div class="container">
    <div class="row">
      <div class="col">
        <%= form_with(url: "/reagents", method: "GET") do |form| %>
          <div class="field mb-1">
            <%= form.label :search_term, class: "form-label" %>
            <%= form.text_field :search_term, class: "form-control", value: params['search_term'] %>
          </div>

          <div class="action mb-1">
            <%= form.submit "Search", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-10">
        <table class="table">
          <thead>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>cost</th>
              <th>purchase location</th>
              <th>max volume</th>
              <th>Currently own?</th>
              <th>Refill</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody>
            <% @reagents.each do |reagent| %>
              <tr>
                <td><%= reagent.id %></td>
                <td><%= reagent.name %></td>
                <td><%= reagent.cost %></td>
                <td><%= reagent.purchase_location %></td>
                <td><%= reagent.max_volume %></td>
                <td><%= reagent.current_volume_percentage > 0 %></td>
                <td><%= link_to "Refill", reagent, remote: true, class: "btn btn-outline-success" %></td>
                <td><%= link_to "Edit", edit_reagent_path(reagent), class: "btn btn-outline-info" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Reagent', new_reagent_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</main>