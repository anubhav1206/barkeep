<% content_for :per_page_js do %>
  <%= javascript_pack_tag "reagents", "data-turbolinks-track": 'reload' %>
<% end %>
<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <%= form_with(url: "/reagents", method: "GET") do |form| %>
          <div class="field mb-1">
            <%= form.label :search_term, class: "form-label" %>
            <%= form.text_field :search_term, class: "form-control", value: params['search_term'] %>
          </div>

          <div class="action mb-1">
            <%= form.submit "Search", class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= link_to 'New Reagent', new_reagent_path, class: 'btn btn-primary' %>
      </div>
      <div class="col-10">
        <table class="table" id="reagentsTable">
          <thead>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>Category</th>
              <th>Current Volume</th>
              <th>Max Volume</th>
              <th>Refill</th>
              <th>Show</th>
            </tr>
          </thead>
          <tbody>
            <% @reagents.each do |reagent| %>
              <tr id="reagent_<%= reagent.id %>">
                <td><%= reagent.id %></td>
                <td><%= reagent.name %></td>
                <td><%= reagent.reagent_category&.name %></td>
                <td data-volume-row><%= reagent.current_volume_percentage * (reagent.max_volume || 0.0) %></td>
                <td><%= reagent.max_volume %></td>
                <td><%= link_to "Refill", reagent_refill_path(reagent), remote: true, method: "post", class: "btn btn-outline-success", data: { reagent_id: reagent.id } %></td>
                <td><%= link_to "Details", reagent_path(reagent), class: "btn btn-outline-info" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastDestination" style="z-index: 11">
    </div>

    <div data-toast-template class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <strong>Watch out!</strong>
      </div>
      <div class="toast-body">
        <span data-toast-body></span>
      </div>
    </div>
  </div>
</main>